<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="IofferRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ioffer_star_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="NobackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/no_back</item>
    </style>

     <!-- list -->
    <style name="ugv2_top_bar_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/ugv2_top_padding_v</item>
        <item name="android:paddingBottom">@dimen/ugv2_top_padding_v</item>
        <item name="android:paddingLeft">@dimen/ugv2_top_padding_h</item>
        <item name="android:paddingRight">@dimen/ugv2_top_padding_h</item>
    </style>
</resources>