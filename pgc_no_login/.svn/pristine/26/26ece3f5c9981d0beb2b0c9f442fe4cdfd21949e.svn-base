<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topBarBg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ugv2_main_header" >

    <ImageView
        android:id="@+id/ugv2_top_backBtn"
        style="@style/ugv2_top_bar_btn"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ugv2_top_back_selector"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/ugv2_top_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dip"
        android:background="@drawable/ugv2_main_arrow"
        android:gravity="center_vertical"
        android:textSize="15sp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ugv2_top_left_btn"
        android:background="@drawable/ugv2_main_header_split"
        android:gravity="center_vertical"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/ugv2_top_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dip"
        android:background="@drawable/ugv2_top_bar_button_selector"
        android:gravity="center_vertical"
        android:text="@string/ugv2_txt_top_setting"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ugv2_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/ugv2_top_title"
        android:textSize="19sp" />

</RelativeLayout>