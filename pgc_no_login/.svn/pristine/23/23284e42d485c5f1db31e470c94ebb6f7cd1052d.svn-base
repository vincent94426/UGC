<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/ic_ioffer_register_background">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ioffer_top_bar_height"
        android:background="@drawable/ic_ioffer_title_bar_bg" >

        <TextView
            android:id="@+id/level_content_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/label_user_title"
            android:textColor="@color/color_register_big_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bnt_user_logout"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:background="@drawable/ic_ioffer_user_edit_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="buttonOnclick"
            android:text="@string/label_user_bnt_logout"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@id/top_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/img_view_user_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_ioffer_user_icon" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_view_user_icon"
            android:text="zhouwei"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bnt_user_edituser"
            android:layout_width="65dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/ic_ioffer_top_bar_ok_selector"
            android:onClick="buttonOnclick"
            android:text="@string/label_user_bnt_edit"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 上传 -->

    <RelativeLayout
        android:id="@+id/user_upload_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ioffer_tab_user_item_height"
        android:layout_below="@id/user_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ioffer_user_upload_selector"
        android:clickable="true"
        android:onClick="buttonOnclick" >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_ioffer_user_upload_icon" />

        <TextView
            android:id="@+id/tv_user_name1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_icon"
            android:text="@string/label_user_upload"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bnt_edit_user"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_ioffer_user_arrow" />

        <TextView
            android:id="@+id/tv_user_upload"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/bnt_edit_user"
            android:background="@drawable/ic_ioffer_user_statistics_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/line_1"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_below="@id/user_upload_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_ioffer_divide_line" />
    <!-- 下载 -->

    <RelativeLayout
        android:id="@+id/user_download_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ioffer_tab_user_item_height"
        android:layout_below="@id/line_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_ioffer_user_download_selector"
        android:clickable="true"
        android:onClick="buttonOnclick" >

        <ImageView
            android:id="@+id/user_icon2"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_ioffer_user_download_icon" />

        <TextView
            android:id="@+id/tv_user_name2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_icon2"
            android:text="@string/label_user_download"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bnt_edit_user2"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_ioffer_user_arrow" />

        <TextView
            android:id="@+id/tv_user_download"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_ioffer_user_statistics_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>